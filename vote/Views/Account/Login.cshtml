@using vote.Models
@model LoginViewModel
@{
    ViewBag.Title = "Вход";
}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><b>Авторизация</b></h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <fieldset>        
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", tabindex = 1, autofocus = true })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                (<small>@Html.ActionLink("Забыли пароль?", "ForgotPassword")</small>)
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", tabindex = 2 })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe, new { tabindex = 3})
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                            <input type="submit" value="Войти" class="btn btn-lg btn-success btn-block" tabindex="4"/>
                            @Html.ActionLink("Зарегистрироваться", "Register",  new object { }, new { @class = "btn btn-link btn-block", tabindex = 4 })
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}